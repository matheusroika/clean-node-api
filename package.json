{
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json && yarn copy-files",
    "build:watch": "rimraf dist && tsc -p tsconfig.build.json && yarn copy-files && (concurrently \"tsc -p tsconfig.build.json -w\" \"tsc-alias -p tsconfig.build.json -w\")",
    "debug": "nodemon --watch ./dist --inspect=0.0.0.0:9222 --nolazy dist/main/server.js",
    "up": "docker-compose up -d",
    "up:build": "yarn build && docker-compose up -d --build",
    "down": "docker-compose down",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests",
    "test:unit": "yarn test --watch -c jest.unit.config.js",
    "test:integration": "yarn test --watch -c jest.integration.config.js",
    "test:all": "yarn test --watch",
    "test:staged": "yarn test --findRelatedTests",
    "test:ci": "yarn test --coverage",
    "copy-files": "cp -r ./public/. ./dist/static/"
  },
  "name": "clean-node-api",
  "version": "1.0.2",
  "main": "index.js",
  "author": "Matheus Roika <matheusroika@hotmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.17",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "concurrently": "^8.2.0",
    "eslint": "^8.42.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fast-glob": "^3.2.12",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^5.6.0",
    "nodemon": "^2.0.22",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.9.0"
  },
  "engines": {
    "node": "16.x"
  }
}
